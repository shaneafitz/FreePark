<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.wit.freepark">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".main.MainApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FreePark">
        <activity
            android:name=".views.map.FreeparkMapView"
            android:exported="true"
            android:label="@string/title_activity_freepark_maps"
            android:theme="@style/Theme.FreePark.NoActionBar" />
        <activity
            android:name=".activities.SplashScreen"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.LoginsActivity"
            android:exported="true"></activity>

        <activity
            android:name=".activities.RegisterActivity"
            android:exported="true" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".views.editLocation.EditLocationView"
            android:exported="true"
            android:label="@string/title_activity_maps" />
        <activity
            android:name=".views.freeparkList.FreeparkListView"
            android:exported="true" />
        <activity android:name=".views.freepark.FreeparkView" />
    </application>

</manifest>